{% extends 'base.html.twig' %}

{% block title %}Liste service{% endblock %}
{% block content %}
<table class="table table-hover">
    <thead>
        <tr>
            <th>id</th>
            <th>Libelle</th>
              <th>Actions</th>

        </tr>
    </thead>
    <tbody>
     {% for service in services %}
        
   
        <tr>
            <td scope="row">{{service.id}}</td>
            <td>{{service.libelle}}</td>
            <td>
             <a href="{{ path('admin.service.edit',{'id': service.id})}}" class="btn btn-primary">Edit</a>
             <a href="{{ path('admin.service.delete',{'id': service.id})}}"  onsubmit="return confirm('Are you sure you want to delete this item?');"
             class="btn btn-danger">Delete</a>
        </tr>
       {% endfor %}
    </tbody>
</table>
  <a href="{{ path('admin.service.add')}}" class="btn btn-success">Ajouter un service</a>
{% endblock %}